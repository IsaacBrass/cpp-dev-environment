    "version": "2.0.0",
    "tasks":
    [
      { "label": "Build All with g++ (Debug)",
        "type": "shell",
        "options": {
          "env": {
            "VAR_NAME": "VAR_VALUE"  // not used, but I wanted to keep a placeholder
          }
        },
        "command": ".vscode/Build_vsc.sh",
        "args": [
          "--gcc",
          "-debug",
          "-warn"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "clear": true,
          "echo": false,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false
        },
        "problemMatcher": "$gcc"
      },



